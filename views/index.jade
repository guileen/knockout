extend layout

block content
  .row
    for id in [0, 1]
      .span6
        i(class='imgpk-pos-#{id}')
        .row
          for i in [0, 1, 2]
            .span2
              i.winsert-pos
              .row
                .span1
                  i.insert-pos
                .span1
                  i.insert-pos

block scripts
  script#pk-image(type='template')
    a.btn(href="/{id}/remove")
      i.icon-trash
      | Delete
    .thumbnail
      a(href="/{id}/ko/{others}")
        img.fullwidth(data-id='{id}', data-url='{url}')

  script#tb-image(type='template')
    a(href='#').tb-small
      img.thumbnail

  include popover

  script(src='/assets/js/popover.js')
  script(src='/assets/js/main.js')
